<%- include('partials/header') %>
<form action="/create-book" method="post">
    <div class="w-[w-full] h-[520px] bg-black flex my-4 mx-10">
        <div class="w-[40%] h-[100%]">
            <img class=""
            src="https://images.unsplash.com/photo-1589998059171-988d887df646?q=80&w=1776&auto=
            format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
            alt="">
        </div>
        <div class="w-[60%] h-[100%] bg-yellow-200 flex flex-col justify-evenly gap-4 px-10">
            <h1 class="font-bold text-2xl">Book Details</h1>
            <input class="py-3.5 px-6 placeholder: placeholder:text-black rounded-md "
            type="text" placeholder="Book Poster" name="Poster">
            <input class="py-3.5 px-6 placeholder: placeholder:text-black rounded-md "
             type="text" placeholder="Book Name" name="Name">
            <input class="py-3.5 px-6 placeholder: placeholder:text-black rounded-md  "
            type="text" placeholder="Author Name" name="Author">
            <input class="py-3.5 px-6 placeholder: placeholder:text-black rounded-md  "
            type="text" placeholder="ISBN Number" name="Isbn">
            <input class="py-3.5 px-6 placeholder: placeholder:text-black rounded-md  "
            type="number" placeholder="Book Price" name="Price">
            <textarea name="description" class="h-[300px] p-2 text-md :p-1   placeholder:text-black "
            placeholder="Enter description here..."></textarea>
            
            
            <h1>
                <button class="py-3 px-5 bg-blue-400 rounded-md text-white">Create Book</button>
            </h1>
      
        </div>
    </div>
    </form>
    
    <%- include("partials/footer") %>